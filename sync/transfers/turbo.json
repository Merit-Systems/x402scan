{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "trigger:dev": {
      "description": "Start transfers sync jobs in development mode",
      "env": ["CDP_*", "BITQUERY_*", "SOLANA_RPC_*", "GOOGLE_CLOUD_*"]
    },
    "trigger:deploy": {
      "description": "Deploy transfers sync jobs to Trigger.dev",
      "env": [
        "CDP_*",
        "BITQUERY_*",
        "SOLANA_RPC_*",
        "GOOGLE_CLOUD_*",
        "TRIGGER_*"
      ]
    }
  }
}
