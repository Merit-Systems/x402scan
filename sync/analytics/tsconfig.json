{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@facilitators/*": ["../facilitators/*"],
      "@scan/*": ["../scan/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "trigger.config.ts",
    "../facilitators/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
