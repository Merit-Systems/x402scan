{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
