{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["X402_*", "X402_PRIVATE_KEY"],
      "outputs": ["dist/**"],
      "passThroughEnv": ["APPDATA", "CODEX_HOME", "XDG_CONFIG_HOME"]
    },
    "dev": {
      "env": ["X402_*", "X402_PRIVATE_KEY"],
      "persistent": true,
      "passThroughEnv": ["APPDATA", "CODEX_HOME", "XDG_CONFIG_HOME"]
    },
    "build:mcpb": {
      "env": ["X402_*", "X402_PRIVATE_KEY"],
      "dependsOn": ["^build"],
      "outputs": ["bundle/**"],
      "passThroughEnv": ["APPDATA", "CODEX_HOME", "XDG_CONFIG_HOME"]
    }
  }
}
