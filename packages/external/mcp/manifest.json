{
  "manifest_version": "0.2",
  "name": "x402scan",
  "version": "0.0.2",
  "description": "Generic MCP server for calling x402-protected APIs with automatic payment handling",
  "author": {
    "name": "Merit Systems",
    "email": "support@merit.systems",
    "url": "https://merit.systems"
  },
  "homepage": "https://x402scan.com",
  "documentation": "https://x402scan.com/mcp",
  "icon": "icon.png",
  "server": {
    "type": "node",
    "entry_point": "server/index.cjs",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.cjs"
      ],
      "env": {}
    }
  },
  "tools": [
    {
      "name": "fetch"
    }
  ],
  "compatibility": {
    "platforms": [
      "darwin",
      "win32",
      "linux"
    ],
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/merit-systems/x402scan/tree/main/packages/external/mcp"
  },
  "user_config": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Your API key for authentication",
      "sensitive": true,
      "required": true
    }
  }
}
