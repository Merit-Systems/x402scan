{
  "name": "@x402scan/mcp",
  "version": "0.0.5",
  "description": "Generic MCP server for calling x402-protected APIs with automatic payment handling",
  "type": "module",
  "main": "dist/esm/index.js",
  "bin": {
    "@x402scan/mcp": "dist/esm/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:mcpb": "tsx scripts/build-mcpb.ts",
    "types:check": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "knip": "pnpm -w knip --workspace ./packages/external/mcp",
    "format": "pnpm -w format:dir ./packages/external/mcp",
    "format:check": "pnpm -w format:check:dir ./packages/external/mcp",
    "prepublishOnly": "pnpm build",
    "publish:check": "pnpm pack --dry-run"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@x402/core": "catalog:x402",
    "@x402/evm": "catalog:x402",
    "@x402scan/neverthrow": "workspace:*",
    "@x402scan/siwx": "workspace:*",
    "chalk": "^5.6.2",
    "js-yaml": "^4.1.1",
    "jsonc-parser": "^3.3.1",
    "open": "^11.0.0",
    "viem": "catalog:",
    "yargs": "^18.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "@types/yargs": "^17.0.35",
    "@x402/extensions": "catalog:x402",
    "@x402scan/eslint-config": "workspace:*",
    "@x402scan/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "x402",
    "payments",
    "ai",
    "claude",
    "model-context-protocol"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Merit-Systems/x402scan/tree/main/packages/external/mcp"
  }
}
