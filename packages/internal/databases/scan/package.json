{
  "name": "@x402scan/scan-db",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "tsup src/* --watch",
    "lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "node scripts/wait-for-db.mjs && prisma migrate deploy",
    "db:format": "prisma format",
    "prebuild": "npm run db:generate",
    "predev": "npm run db:generate",
    "studio": "prisma studio",
    "knip": "pnpm -w knip --workspace ./packages/internal/databases/scan",
    "format": "pnpm -w format:dir ./packages/internal/databases/scan",
    "format:check": "pnpm -w format:check:dir ./packages/internal/databases/scan"
  },
  "dependencies": {
    "@neondatabase/serverless": "catalog:prisma",
    "@prisma/adapter-neon": "catalog:prisma",
    "@prisma/client": "catalog:prisma",
    "dotenv": "catalog:env",
    "ws": "catalog:prisma"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/ws": "catalog:prisma",
    "@x402scan/eslint-config": "workspace:*",
    "@x402scan/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prisma": "catalog:prisma",
    "rimraf": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "zod": "catalog:"
  }
}
