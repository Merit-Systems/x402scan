{
  "name": "x402scan-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:deploy": "turbo run build:deploy",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "types:check": "turbo run types:check",
    "types:generate": "turbo run types:generate",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "format:dir": "prettier --write",
    "format:check:dir": "prettier --check",
    "knip": "knip",
    "knip:check": "turbo run knip",
    "check": "turbo run format types:check lint knip",
    "trigger:deploy:analytics": "turbo run trigger:deploy --filter=sync-analytics",
    "trigger:deploy:transfers": "turbo run trigger:deploy --filter=sync-transfers",
    "trigger:deploy:alerts": "turbo run trigger:deploy --filter=sync-alerts"
  },
  "devDependencies": {
    "knip": "^5.80.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.3",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.40.0"
    },
    "onlyBuiltDependencies": [
      "@coinbase/x402"
    ]
  }
}
