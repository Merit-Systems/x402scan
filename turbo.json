{
  "$schema": "https://v2-8-0.turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:deploy": {
      "dependsOn": ["^build", "^db:generate", "^db:deploy"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": [
        "^types:generate",
        "^build",
        "^db:generate",
        "types:generate",
        "db:generate"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^types:generate",
        "^build",
        "^db:generate",
        "types:generate",
        "db:generate"
      ]
    },
    "dev": {
      "dependsOn": ["^build", "^db:generate"],
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "types:generate": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "types:check": {
      "dependsOn": [
        "^types:check",
        "^types:generate",
        "^db:generate",
        "types:generate",
        "^build",
        "db:generate"
      ]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "knip": {},
    "knip:check": {},
    "publish:check": {},
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "trigger:deploy": {
      "dependsOn": ["^build", "^db:generate"],
      "cache": false
    }
  },
  "globalEnv": ["TURBO_*"],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "VERCEL_BRANCH_URL"
  ],
  "remoteCache": {
    "enabled": true
  }
}
