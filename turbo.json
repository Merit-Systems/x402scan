{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "ANALYTICS_CLICKHOUSE_*",
        "POSTGRES_*",
        "SCAN_DATABASE_URL*",
        "CDP_*",
        "*_RPC_URL",
        "TRANSFERS_DB_*",
        "HIDE_TRPC_LOGS",
        "GITHUB_TOKEN",
        "CRON_SECRET",
        "FREEPIK_API_KEY",
        "BLOB_READ_WRITE_TOKEN",
        "FREE_TIER_WALLET_NAME",
        "REDIS_URL",
        "LMNR_PROJECT_API_KEY",
        "NODE_ENV",
        "NEXT_RUNTIME",
        "AUTH_SECRET",
        "OPENAI_API_KEY",
        "DATABASE_URL",
        "ECHO_PROXY_URL",
        "JINA_API_KEY",
        "HELIUS_API_KEY",
        "GOOGLE_CLOUD_CREDENTIALS",
        "BITQUERY_API_KEY",
        "ADDRESS",
        "PORT",
        "DISCORD_WEBHOOK_URL",
        "OPENROUTER_API_KEY"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["ANALYTICS_CLICKHOUSE_*"]
    },

    "typegen": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "outputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "trigger:deploy": {
      "dependsOn": ["^build", "^db:generate"],
      "cache": false,
      "env": [
        "TRIGGER_ACCESS_TOKEN",
        "ANALYTICS_CLICKHOUSE_*",
        "POSTGRES_*",
        "TRANSFERS_DB_*",
        "SCAN_DATABASE_URL*"
      ]
    },
    "lint": {
      "dependsOn": ["^db:generate", "typegen", "^build"]
    },
    "check:types": {
      "dependsOn": ["^db:generate", "typegen", "^build"]
    },
    "check:format": {},
    "knip": {}
  },
  "globalEnv": ["TURBO_*"],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "VERCEL_BRANCH_URL"
  ],
  "remoteCache": {
    "enabled": true
  }
}
