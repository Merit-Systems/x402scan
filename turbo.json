{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {
      "cache": false
    },
    "check:types": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "check:format": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:migrate:dev": {
      "cache": false
    },
    "db:migrate:prod": {
      "cache": false
    },
    "trigger:dev": {
      "cache": false,
      "persistent": true
    },
    "trigger:deploy": {
      "cache": false
    }
  }
}
